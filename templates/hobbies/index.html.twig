{% extends 'base.html.twig' %}

{% block title %}Hobbies index{% endblock %}

{% block body %}
    <h1>Hobbies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Loisir</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hobby in hobbies %}
            <tr>
                <td>{{ hobby.id }}</td>
                <td>{{ hobby.loisir }}</td>
                <td>
                    <a href="{{ path('app_hobbies_show', {'id': hobby.id}) }}">show</a>
                    <a href="{{ path('app_hobbies_edit', {'id': hobby.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hobbies_new') }}">Create new</a>
{% endblock %}
