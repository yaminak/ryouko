{% extends 'users.html.twig' %}

{% block title %}
	Modification du mot de passe de
	{{app.user.prenom}}
	{{app.user.nom}}
{% endblock %}

{% block body %}
	<div class="grix container">
		{% for message in app.flashes
                ('error') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-1 red light-4 text-red text-dark-4">
					{{message}}
				</div>
			</div>
		{% endfor %}
		<h3>Modification du mot de passe de
			{{app.user.prenom}}
			{{app.user.nom}}
		</h3>
		<form method="post">
			<div class="form-field">
				<label for="pass">Mot de passe</label>
				<input type="password" id="pass" name="pass" class="form-control"/>
			</div>
			<div class="form-field">
				<label for="pass2">Confirmer le mot de passe</label>
				<input type="password" id="pass2" name="pass2" class="form-control"/>
			</div>
			<button class="btn shadow-1 primary rounded-4">Valider
			</button>
		</form>
	</div>

</div>{% endblock %}
