											<div class="card mb-4 rounded-4">
												<div class="d-flex">
													<div class="user d-flex flex-row align-items-center">
														<img src="{{ asset(image_path ~ leCommentaire.user.avatar)}}" width="80" class="user-img rounded-circle ms-2 mr-2 mt-3 mb-3">


														<div class="d-flex justify-content-end fw-bold text-primary  mb-1 ms-3">{{ leCommentaire.user.username }}
														</div>
													</div>
													{# <small>2 days ago</small> #}
												</div>
												<div class="d-flex justify-content-center">
													<a href="javascrip:void(0)" class="d-flex align-items-center ms-5 mb-3">
														<i class="{% if leCommentaire.rating != 1 %} far {% else %}fa-solid {% endif %} fa-thumbs-up me-2"></i>
														<p class="mb-0">Like</p>
													</a>
													<a href="javascrip:void(0)" class="d-flex align-items-center ms-4 mb-3">
														<i class="{% if leCommentaire.rating != 2 %} far {% else %} fa-solid {% endif %} fa-thumbs-down me-2"></i>
														<p class="mb-0">Dislike</p>
													</a>
												</div>
												<p class="font-weight-bold text-dark ms-4 me-4">{{ leCommentaire.message }}
												</p>

												<div class="small d-flex justify-content-end mt-5 mb-2 me-2">
													<button type="button" class="btn btn-primary me-2 ">Reply</button>
													{{ include('pays/_delete_form.html.twig') }}
												</div>
											</div>


										{% else %}

											<p>no records found</p>

										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

