{% block body %}

	<h1 class="ms-5 text-decoration-underline">Les Résultats :</h1>
	<div class="container">
		<div class="raw text-center">
			<h1 class="fs-1 text-primary fst-italic mt-5 mb-5">Partie des articles</h1>
			{% for article in articles %}

				<div>
					<h1 class="fs-6">{{ article.title }}</h1>

					<p>{{ article.content|raw }}</p>
				</div>
			{% endfor %}
		</div>
		<hr class="my-5">
		<div class="raw text-center">
			<h1 class="fs-1 text-primary fst-italic mb-5">Partie des commentaires</h1>
			{% for commentaire in commentaires %}
				<div class="mb-5">
					<p class="font-weight-bold text-light ms-4 me-4">{{ commentaire.message }}
					</p>
					<p class="font-weight-bold text-light ms-4 me-4">
						posté le
						{{ commentaire.createdAT|date("m/d/Y H:i:s") }}
					</p>
					<hr>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
