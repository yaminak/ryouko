{% extends 'base.html.twig' %}


{% block title %}Log in!
{% endblock %}

{% block body %}
	<section class="vh-100 gradient-custom">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-8 col-lg-6 col-xl-5">
					<div class="card bg-dark text-white" style="border-radius: 1rem;">
						<div class="card-body-login p-5 text-center">
							<div class="mb-md-5 mt-md-4 pb-5">

								<form method="post">
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}

									{% if app.user %}
										<div class="mb-3">
											You are logged in as
											{{ app.user.userIdentifier }},
											<a href="{{ path('app_logout') }}">Logout</a>
										</div>
									{% endif %}

									<h2 class="fw-bold mb-2 text-primary fst-italic">LOGIN</h2>
									<p class="text-white-50 mt-3 mb-5">Please enter your email and password</p>

									<div class="form-outline form-white mb-4">
										<label for="inputEmail">Email</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
									</div>
									<div class="form-outline form-white mb-4">
										<label for="inputPassword">Password</label>
										<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
									</div>

									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<fieldset class="custom-control custom-switch">
										<input type="checkbox" class="custom-control-input" id="remember_me_checkbox" name="_remember_me">
										<label class="custom-control-label ms-2" for="remember_me_checkbox">
											Remember me
										</label>

									</fieldset>

									<button class="rounded-pill border border-primary border border-3 mt-5" type="submit">
										Sign in
									</button>
								</div>

								<div>
									<a href="{{ path('app_forgot_password_request') }}" class="btn btn-secondary mb-4">Forgot password ?</a>
									<p class="mb-0">Don't have an account?
										<a href="{{ path('app_register') }}" class="text-primary fw-bold">
											<u>Sign Up</u>
										</a>
									</p>


								</div>

							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
