{% extends 'admin.html.twig' %}

{% block title %}Gérer les articles
{% endblock %}

{% block body %}
	<h1 class="titre_article1 text-center mt-5 mb-5">Gérer les articles</h1>
	<section class="intro">
		<div class="mask d-flex align-items-center h-100 mx-5">
			<div class="table-responsive mx-auto">
				<table class="table table-dark table-bordered mb-0">
					<thead class="text-center align-middle">
						<tr>
							<th scope="col">Id</th>
							<th scope="col">titre</th>
							<th scope="col">Date</th>
							<th scope="col">Contenu</th>
							<th scope="col">actions</th>
						</tr>
					</thead>
					<tbody>
						{% for article in articles %}
							<tr>
								<td>{{ article.id }}</td>
								<td>{{ article.title }}</td>
								<td>{{ article.createdAt|date }}</td>
								<td>{{ article.content| raw }}</td>
								<td class="text-center">
									<a href="{{ path('admin_articles_modifier', {'id': article.id}) }}">Edit</a>
									<a href="{{ path('admin_articles_supprimer', {'id': article.id}) }}">Delete</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<button class="btn btn-dark mt-5 mb-5 ms-5">
			<a href="{{ path('admin_articles_ajout') }}">Create new</a>
		</button>
	</section>
{% endblock %}
