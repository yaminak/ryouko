{% extends 'base.html.twig' %}

{% block title %}Commentaire index
{% endblock %}

{% block body %}
	<h1 class="titre_user text-center mt-5 mb-5 text-primary">Commentaire index</h1>
	<section class="intro">
		<div class="mask d-flex align-items-center h-100 mx-5">
			<div class="table-responsive mx-auto">
				<table class="table table-dark table-bordered mb-0">
					<thead class="text-center align-middle">
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Utilisateur</th>
							<th scope="col">Pays</th>
							<th scope="col">Message</th>
							<th scope="col">actions</th>
						</tr>
					</thead>
					<tbody>
						{% for commentaire in commentaires %}
							<tr>
								<td>{{ commentaire.id }}</td>
								<td>{{ commentaire.user.username }}</td>
								<td>{{ commentaire.pays.nom }}</td>
								<td>{{ commentaire.message|u.truncate(165, '...') }}</td>
								<td>
									<a href="{{ path('app_admin_commentaire_show', {'id': commentaire.id}) }}">show</a>
									{{ include('admin/commentaire/_delete_form.html.twig') }}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

	{% endblock %}
