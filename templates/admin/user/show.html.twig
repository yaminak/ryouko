{% extends './admin.html.twig' %}

{% block title %}Modifier un utilisateur
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="titre_user1 text-center mt-5 mb-5">Fiche de l'utilisateur</h1>
		<table class="table table-dark table-hover">
			<tbody class="text-center">
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Username</th>
					<td>{{ user.username }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Password</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th>Avatar</th>
					<td><img class="rounded-circle shadow-4-strong me-3" width="60" height="60" alt="{{user.nom}}" src="{{ asset(image_path ~ user.avatar)}}"/></td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_user_index') }}">back to list</a>

		<a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>

		{{ include('admin/user/_delete_form.html.twig') }}
	</div>

{% endblock %}
